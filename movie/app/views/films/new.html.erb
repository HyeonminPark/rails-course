<div class="jumbotron">
    <h1>New Movie</h1>
    <br>
    <h4><%= link_to 'Home', root_path, {:class => 'btn btn-primary'} %></h4>
</div>

<div class="container">
<%= form_for @film do |f| %>
    <div class="form-group">
        <%= f.text_field :picture, placeholder: 'Picture', :class =>'form-control' %>
    </div>
    <div class="form-group">
        <%= f.text_field :title, placeholder: 'Title', :class =>'form-control' %>
    </div>
    <div class="form-group">
        <%= f.text_area :description, placeholder: 'Description', :class =>'form-control' %>
    </div>
    <div class="form-group">
        <%= f.submit 'Save', :class => 'form-control btn btn-primary' %>
    </div>
<% end %>
</div>