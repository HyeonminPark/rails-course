<div class="jumbotron">
    <h1>Movie Channel</h1>
    <br>
    <h4><%= link_to 'New Film', new_film_path, {:class => 'btn btn-primary'} %> <%= link_to 'User', users_path, {:class => 'btn btn-info'} %></h4>
</div>

<div class="container">
<div class="row">
    <% @films.each do |film| %>
    <div class="col-sm-12 col-md-4 col-lg-2 content">
        <div>
            <img src="<%= film.picture %>" width="150" height="200">
        </div>
        <div>
            <h5><%= film.title %></h5>
        </div>
        <div>
            <p><%= film.description %></p>
        </div>
        <div>
            <%= link_to '', edit_film_path(film.id), {:class => "fas fa-tools edit"} %>
            <%= link_to '', film_path(film.id), {:class => "fas fa-search show"} %>
        </div>
    </div>
    <% end %>
</div>
</div>
