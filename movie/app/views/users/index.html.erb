<div class="jumbotron">
    <h1>Users</h1>
    <br>
    <h4><%= link_to 'Home', root_path, {:class => 'btn btn-primary'} %> <%= link_to 'New User', new_user_path, {:class => 'btn btn-info'} %></h4>
</div>

<div class="container">
<div class="row">
<% @users.each do |user| %>
    <div class="col-sm-6 col-md-4 col-lg-3 content">
        <div>
           <img src="<%= user.picture %>" width="100" height="100">  
        </div>
        <div>
            <h5><%= user.first_name %></h5>
        </div>
            <h5><%= user.last_name %></h5>
        <div>
            <h6><%= user.email %></h6>
        </div>
        <div>
            <%= link_to '', edit_user_path(user.id), {:class => "fas fa-tools edit"} %>
            <%= link_to '', user_path(user.id), {:class => "fas fa-search show"} %>
        </div>
    </div>
<% end %>
</div>
</div>