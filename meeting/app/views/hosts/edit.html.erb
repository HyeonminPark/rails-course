<div class="guests container">
    <h1>Edit Form</h1>
</div>
<div class="container">
<form action='/hosts/edit' method='post'>
    <div class="form-group">
       <input type='hidden' name='id' value="<%= @host.id %>"> 
    </div>
    <div class="form-group">
       <input type='text' name='title' value="<%=@host.title%>" placeholder="Title"> 
    </div>
    <div class="form-group">
        <input type='text' name='name' value="<%=@host.name%>" placeholder="Name">
    </div>
    <div class="form-group">
       <input type='text' name='email' value="<%=@host.email%>" placeholder="Email"> 
    </div>
    <div class="form-group">
        <input type='text' name='date' value="<%=@host.date%>" placeholder="Date">
    </div>
    <div class="form-group">
       <input type='text' name='location' value="<%=@host.location%>" placeholder="Location"> 
    </div>
    <div class="form-group">
        <input type='text' name='description' value="<%=@host.description%>"placeholder="Description">
    </div>
    <div class="form-group">
       <input type='text' name='picture' value="<%=@host.picture%>" placeholder="Picture"> 
    </div>
    <div class="form-group">
        <input type='submit' value='Save'>
    </div>
</form>
</div>