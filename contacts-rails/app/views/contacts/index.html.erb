<div class="jumbotron">
    <h1>CONTACTS</h1>
</div>

<div class="container">
    <form action="/search" method="get">
        <div class="form-inline">
            <input class="form-control form-control-sm" type="text" name="query" placeholder="Search.....">
            <input class="btn btn-primary btn-sm" type="submit" value="Search">
            <a class="btn btn-primary btn-sm" href="/contacts/new">New</a>
        </div>
    </form>
</div>
<div class="container">
    <table class="table-striped table-sm" width="100%">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th></th>
        </tr>
        <% @contacts.each do |contact| %>
        <tr>
            <td><%= contact.first_name %></td>
            <td><%= contact.last_name %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.email %></td>
            <td><%= contact.address %></td>
            <td><%= contact.city %></td>
            <td><%= contact.state %></td>
            <td><%= contact.zip %></td>
            <td><a href="/contacts/edit?id=<%=contact.id%>">Edit</a></td>
        </tr>
        <% end %>
    </table>
</div>