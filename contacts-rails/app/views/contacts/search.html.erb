<div class="jumbotron">
    <h1>CONTACT</h1>
</div>
<div class="container">
    <% if @contacts.length == 0 %>
        <h1>No Results Found</h1>
    <% else %>
        <h5 class="text-primary">Results for: <%= params[:query] %></h5>
        
        <table class="table-striped table-sm" width="100%">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th></th>
            </tr>
            <% @contacts.each do |contact| %>
            <tr>
                <td><%= contact.first_name %></td>
                <td><%= contact.last_name %></td>
                <td><%= contact.phone %></td>
                <td><%= contact.email %></td>
                <td><%= contact.address %></td>
                <td><%= contact.city %></td>
                <td><%= contact.state %></td>
                <td><%= contact.zip %></td>
                <td><a href="/contacts/edit?id=<%=contact.id%>">Edit</a></td>
            </tr>
            <% end %>
        </table>
    <% end %>
</div>