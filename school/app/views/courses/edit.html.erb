<%= form_for @course do |f| %>
    <div>
        <%= f.text_field :name, placeholder: "Name" %>
    </div>
    <div>
        <%= f.text_field :location, placeholder: "Location" %>
    </div>
    <div>
        <%= f.text_area :description, placeholder: "Description" %>
    </div>
    <div>
        <%= f.submit 'Save' %>
    </div>
<% end %>